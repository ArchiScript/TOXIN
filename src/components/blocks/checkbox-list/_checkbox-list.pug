mixin checkbox-list({title= "expandable checkbox-list", expanded,options}={},size="")
  - let exp = expanded ? "--expanded" : "";
  div(class=`checkbox-list --middle-size ${exp}`)
    h3.checkbox-list__header= title
    .checkbox-list__inner
      each item in options 
        +checkbox(item[0],item[1],item[2])
