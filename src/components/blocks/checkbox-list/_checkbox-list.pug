mixin checkbox-list({title= "expandable checkbox-list",style= "bold", expanded,options}={},size="--middle-size")
  - let exp = expanded ? "--expanded" : "";
  div(class=`checkbox-list ${size} ${exp}`)
    h3.checkbox-list__header= title
    .checkbox-list__inner
      each i in options 
        +checkbox({label:i.label,style:i.style,subtitle:i.subtitle,checked:i.checked})
