        .header__logo
          .header__logo-cycle
            a(href="#")
              +image("logo-colored","logo") 
          .header__logo-text
            a(href="#")
              +image("toxin","logo") 
        nav.header__nav
          .header__nav-links
            != getTree(navItems)
          .header__buttons
            +button({text: "войти", style: "bordered",size: "flex-size"})
            +button({text: "зарегистрироваться", style: "filled",size: "flex-size"})
