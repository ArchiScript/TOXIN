mixin lists
  .form-elements__lists.row
    .blocks-set
      .form-elements__expandable-checkboxes.column-3 
        |
        .form-elements__elements-block.elements-block
          +checkbox-list({options:[ ["Завтрак","checkbox4"], ["Письменный стол","checkbox5", "checked"], ["Стул для кормления","checkbox6", "checked"],["Кроватка","checkbox7", "checked"], ["Шампунь","checkbox8"]]})
