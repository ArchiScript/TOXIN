mixin datepicker(label, placehld,size="--middle-size")
  - mixinCount++;
  div(class=`date-dropdown ${size}`)
    label(for=label)= label
    br
    - let inputTypeClass = `date-dropdown__input`;
    - let compoundId = `datepicker-el-${mixinCount}`;
    input(
      type="text",
      placeholder=placehld,
      name=label,
      class=inputTypeClass,
      id=compoundId
    )

mixin filter-datepicker(label,placehld,inputId,size="--middle-size")
  - mixinCount++;
  div(class=`filter-date-dropdown ${size}`)
    label(for=label)= label
    br
    - let inputTypeClass = `filter-date-dropdown__input`;
    - let compoundId = `filterdatepicker-el-${mixinCount}`;
    input(
      type="text",
      placeholder=placehld,
      name=label,
      class=inputTypeClass,
      id=compoundId
    )
