mixin rating(options= {})
  - mixinCount++;
  - const { name = `rating-el-${mixinCount}`, value = 1, max = 5, disabled = false, readonly = false } = options;
  .rating
    - for(let i =1; i<=max; i++)
      input.rating__input.icon-star(
        type="radio",
        id=`${name}-${i}`,
        name=name,
        value=i,
        checked=i <= value,
        disabled=false,
        readonly=false
      )
