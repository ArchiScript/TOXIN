mixin rating(options= {})
  - mixinCount++;
  - let { name = `rating-el-${mixinCount}`, value = 1, max = 5, disabled = false, readonly = false, interactive = true } = options;
  - let isInteractive = " --interactive";
  - if(interactive==false){
  - isInteractive = " --noninteractive";
  - disabled = true;
  - }

  div(class=`rating${isInteractive}`)
    - for(let i =1; i<=max; i++)
      input.rating__input.icon-star(
        type="radio",
        id=`${name}-${i}`,
        name=name,
        value=i,
        checked=i <= value,
        disabled=disabled,
        readonly=readonly
      )
